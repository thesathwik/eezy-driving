# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/eazydriving
# For MongoDB Atlas (production):
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/eazydriving?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# CORS Configuration
CLIENT_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Email Configuration
# Choose one: 'gmail', 'smtp', or leave empty to log to console
EMAIL_SERVICE=
EMAIL_FROM=noreply@eezydriving.com

# For Gmail (requires app password):
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password

# For SMTP:
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-smtp-username
# SMTP_PASSWORD=your-smtp-password

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Twilio Configuration (SMS + WhatsApp notifications)
# Leave empty to skip SMS/WhatsApp â€” email will still send
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=+14155238886
